{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "brickui": ["./src/"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src", "declaration.d.ts"],
  "exclude": ["node_modules", "dist"]
}
