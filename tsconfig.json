{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es2022",
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "./src",
    "jsx": "react"
  },
  "include": ["src", "declaration.d.ts"],
  "exclude": ["node_modules"]
}
