{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declarationDir": "./dist/types",
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src", "declaration.d.ts"],
  "exclude": ["node_modules", "dist"]
}
